package br.com.contatos.entity;

import java.util.Date;

import org.springframework.data.annotation.Id;
import org.springframework.format.annotation.DateTimeFormat;

import br.com.contatos.entity.Operadora.Builder;

public final class Contato {

	@Id
	private String id;
	private String nome;
	private String telefone;
	private String cor;
	
	@DateTimeFormat
	private Date data;
	
	private Operadora operadora;
	
	public static Builder getBuilder() {
		return new Builder();
	}
	
	static class Builder {
		private String nome;
		private String telefone;
		private String cor;
		
		Builder nome(String nome){
			this.nome = nome;
			return this;
		}
		
		Builder telefone(String telefone){
			this.telefone = telefone;
			return this;
		}
		
		Builder cor(String cor){
			this.cor = cor;
			return this;
		}
	}
}
